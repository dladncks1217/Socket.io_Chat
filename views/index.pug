  script(src='/socket.io/socket.io.js')
  script.
    //웹 소켓 스크립트 부분
    let socket = io.connect('http://localhost:8005',{
      path: '/socket.io',      // 이 부분이 socket.js파일의 path와 같아야 연결이 되는 것이다.
        transports:['websocket'],  //http요청 없이 처음부터 바로 웹소켓 연결. 웹소켓 브라우저가 지원 안할까 불안하면 빼면됨.
    });
    socket.on('news',function(data){
      console.log(data);
      socket.emit('message','Hello Node js');
      socket.emit('reply','Hello Node js');
    });